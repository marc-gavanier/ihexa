{
  "name": "ihexa",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:cucumber": "NODE_OPTIONS='--import tsx/esm' cucumber-js src/features/**/*.feature --import src/features/**/*.feature.ts",
    "test:e2e": "playwright test",
    "lint:code:fix": "pnpm exec biome check --write",
    "lint:code:ci": "pnpm exec biome ci",
    "lint:commit": "commitlint --from origin/main",
    "lint:architecture": "depcruise src && folderslint",
    "doc:architecture": "depcruise src --include-only \"^src\" --output-type dot | dot -T svg > dependency-graph.svg",
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "i18n:interface": "i18next-resources-for-ts interface -i public/locales/en-US -o @types/resources.d.ts",
    "prepare": "husky",
    "postinstall": "pnpm i18n:interface"
  },
  "keywords": [
    "ihexa",
    "training",
    "feature-based",
    "clean-architecture",
    "react",
    "nextjs",
    "typescript"
  ],
  "contributors": [
    {
      "name": "Marc Gavanier",
      "email": "marc.gavanier@gmail.com",
      "url": "https://www.linkedin.com/in/marc-gavanier/"
    }
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.7",
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@csstools/postcss-cascade-layers": "^5.0.2",
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^9.1.15",
    "@storybook/addon-docs": "^9.1.15",
    "@storybook/addon-onboarding": "^9.1.15",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/addon-vitest": "^9.1.15",
    "@storybook/nextjs-vite": "^9.1.15",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/browser": "4.0.3",
    "@vitest/browser-playwright": "4.0.3",
    "@vitest/coverage-v8": "4.0.3",
    "dependency-cruiser": "^17.1.0",
    "folderslint": "^1.2.0",
    "husky": "^9.1.7",
    "i18next-resources-for-ts": "^1.7.4",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "sst": "3.17.21",
    "storybook": "^9.1.15",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.1",
    "daisyui": "^5.3.9",
    "dotenv": "^17.2.3",
    "effect": "^3.18.4",
    "i18next": "^25.6.0",
    "next": "^16.0.0",
    "piqure": "^2.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7"
  }
}
